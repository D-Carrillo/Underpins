{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-appdata-read-recursive",
      "allow": [
        {
          "path": "$APP_DATA_DIR/user_images/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-appdata-write-recursive",
      "allow": [
        {
          "path": "$APP_DATA_DIR/user_images/**"
        }
      ]
    }
  ]
}